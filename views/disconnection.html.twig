{% extends 'layout.html.twig' %}

{% block keywords %}disconnection{% endblock %}

{% block title %}{{ website.title }} - Disconnection{% endblock %}

{% block page_title %}
    <!-- Header of the webpage. -->
    <header class="scims-page-header col-md-12 col-sm-12 col-xs-12">
        <h1 class="scims-page-title">
            {{ website.title }} : Disconnection
        </h1>
    </header>
{% endblock %}

{% block content %}
    <section class="col-md-8 col-sm-8 col-xs-8">
        <h2>Disconnection</h2>
        <p>Would you like disconnected from {{ website.title }} ? </p>
        <form action="/web/index.php?action=verification&form=disconnection" method="post" class="form-horizontal">
            {% for form in forms %}
                <div class="form-group">
                    <label for="{{ form.id }}" class="control-label col-md-2 col-sm-4 col-xs-4">{{ form.label }}</label>
                    <div class="col-md-10 col-md-offset-2 col-sm-8 col-sm-offset-4 col-xs-8 col-xs-offset-4">
                        {% autoescape false %}{{ form.render }}{% endautoescape %}
                    </div>
                </div>
            {% endfor %}
        </form>
    </section>
{% endblock %}
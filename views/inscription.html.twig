{% extends 'layout.html.twig' %}

{% block title %}SciMS - Inscription{% endblock %}
{% block content %}
    <section class="col-md-8 col-sm-8 col-xs-8">
        <form action="" method="post" class="form-horizontal">
            <!-- Label Email -->
            <div class="form-group">
                <label for="email" class="control-label col-md-2 col-sm-4 col-xs-4">Email</label>
                <div class="col-md-10 col-md-offset-2 col-sm-8 col-sm-offset-4 col-xs-8 col-xs-offset-4">
                    <input type="email" id="email" name="email" placeholder="Enter your email ..." class="form-control">
                </div>
            </div>
            <!-- Label Username -->
            <div class="form-group">
                <label for="username" class="control-label col-md-2 col-sm-4 col-xs-4">Username</label>
                <div class="col-md-10 col-md-offset-2 col-sm-8 col-sm-offset-4 col-xs-8 col-xs-offset-4">
                    <input type="text" id="username" name="username" placeholder="Enter your username ..." class="form-control">
                </div>
            </div>
            <!-- Label Password -->
            <div class="form-group">
                <label for="password" class="control-label col-md-2 col-sm-4 col-xs-4">Password</label>
                <div class="col-md-10 col-md-offset-2 col-sm-8 col-sm-offset-4 col-xs-8 col-xs-offset-4">
                    <input type="text" id="password" name="password" placeholder="Enter your password ..." class="form-control">
                </div>
            </div>
            <!-- Button group -->
            <div class="form-group">
                <div class="col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
                    <button type="submit" class="btn btn-primary">Inscription</button>
                </div>
            </div>
        </form>
    </section>
{% endblock %}